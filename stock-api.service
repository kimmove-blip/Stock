[Unit]
Description=AI Stock Analysis FastAPI Server
After=network.target

[Service]
Type=simple
User=kimhc
WorkingDirectory=/home/kimhc/Stock
Environment=PATH=/home/kimhc/Stock/venv/bin
ExecStart=/home/kimhc/Stock/venv/bin/uvicorn api.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
